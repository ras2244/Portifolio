@model IEnumerable<Assignment6.Controllers.PlaylistWithDetail>

@{
    ViewBag.Title = "Playlists";
}

<h2>List of Playlist</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <div class="badge">
                @Html.DisplayFor(modelItem => item.TracksCount)
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlaylistId }) 
        </td>
    </tr>
}

</table>
